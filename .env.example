# The Indian Startup - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production: NEXT_PUBLIC_APP_URL=https://theindianstartup.in
NODE_ENV=development
# For production: NODE_ENV=production

# Supabase Configuration
# Format: https://[PROJECT_REF].supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:6543/postgres?pgbouncer=true
DATABASE_URL=postgresql://postgres:your_password@db.your-project-ref.supabase.co:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres

# Razorpay (Payment Gateway)
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Email Configuration (GoDaddy SMTP)
EMAIL_HOST=smtpout.secureserver.net
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=support@theindianstartup.in
EMAIL_PASS=your_email_password
EMAIL_FROM=support@theindianstartup.in

# Analytics (PostHog)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com


# Error Monitoring (Optional - Sentry)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
# SENTRY_ORG=your_sentry_org
# SENTRY_PROJECT=your_sentry_project

# Feature Flags (Optional)
# NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
# NEXT_PUBLIC_ENABLE_COMMUNITY_FEATURES=true

# Security Keys
JWT_SECRET=your_jwt_secret_key
WEBHOOK_SECRET=TheIndianStartup

# File Upload (Optional - if using external storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=ap-south-1
# AWS_S3_BUCKET=your_s3_bucket_name

# External API Keys (Optional)
# WHATSAPP_API_KEY=your_whatsapp_api_key
# SMS_API_KEY=your_sms_api_key

# Admin Configuration
ADMIN_EMAILS=admin@theindianstartup.in,support@theindianstartup.in

# Rate Limiting
# UPSTASH_REDIS_REST_URL=your_upstash_redis_url
# UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token
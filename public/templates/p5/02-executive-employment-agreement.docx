                <td width="50%">
                    <p>Witness 1:</p>
                    <p>Signature: ____________________</p>
                    <p>Name: _______________________</p>
                    <p>Date: _______________________</p>
                </td>
                <td width="50%">
                    <p>Witness 2:</p>
                    <p>Signature: ____________________</p>
                    <p>Name: _______________________</p>
                    <p>Date: _______________________</p>
                </td>
            </tr>
        </table>
    </div>


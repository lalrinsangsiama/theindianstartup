# The Indian Startup - Production Environment Variables
# Use this for production deployment (Vercel/Netlify/etc.)

# App Configuration
NEXT_PUBLIC_APP_URL=https://theindianstartup.in
NODE_ENV=production

# Supabase Configuration
# Format: https://[PROJECT_REF].supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:6543/postgres?pgbouncer=true
DATABASE_URL=postgresql://postgres:your_password@db.your-project-ref.supabase.co:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres

# Razorpay (Payment Gateway) - LIVE KEYS
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_live_your_live_key_id
RAZORPAY_KEY_SECRET=your_live_razorpay_secret

# Email Configuration (GoDaddy SMTP)
EMAIL_HOST=smtpout.secureserver.net
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=support@theindianstartup.in
EMAIL_PASS=your_production_email_password
EMAIL_FROM=support@theindianstartup.in

# Analytics (PostHog)
NEXT_PUBLIC_POSTHOG_KEY=your_production_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Security Keys - Generate strong secrets
JWT_SECRET=your_super_secure_jwt_secret_256_bits_minimum
WEBHOOK_SECRET=TheIndianStartup

# Admin Configuration
ADMIN_EMAILS=admin@theindianstartup.in,support@theindianstartup.in

# Error Monitoring (Recommended for production)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=theindianstartup
SENTRY_PROJECT=theindianstartup-platform

# Rate Limiting (Recommended for production)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token